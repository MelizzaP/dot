{
  "$schema": "https://opencode.ai/config.json",
  "autoupdate": true,
  "theme": "everforest",
  "small_model": "anthropic/claude-3-5-haiku-20241022",
  "keybinds": {
    "leader": "ctrl+x",
    "app_exit": "ctrl+q,<leader>q",
    "editor_open": "<leader>e",
    "theme_list": "<leader>t",
    "session_export": "<leader>x",
    "session_new": "<leader>n",
    "session_list": "<leader>l",
    "session_share": "<leader>s",
    "session_unshare": "none",
    "session_interrupt": "esc",
    "session_compact": "<leader>c",
    "session_child_cycle": "alt+right",
    "session_child_cycle_reverse": "alt+left",
    "messages_page_up": "pgup",
    "messages_page_down": "pgdown",
    "messages_half_page_up": "ctrl+alt+u",
    "messages_half_page_down": "ctrl+alt+d",
    "messages_first": "ctrl+g,home",
    "messages_last": "ctrl+alt+g,end",
    "messages_copy": "<leader>y",
    "messages_undo": "<leader>u",
    "messages_redo": "<leader>r",
    "model_list": "<leader>m",
    "model_cycle_recent": "f2",
    "model_cycle_recent_reverse": "shift+f2",
    "agent_list": "<leader>a",
    "agent_cycle": "tab",
    "agent_cycle_reverse": "shift+tab",
    "input_clear": "ctrl+c",
    "input_paste": "ctrl+v",
    "input_submit": "return",
    "input_newline": "shift+return,ctrl+j"
  },
  "mcp": {
    "podman": {
      "type": "local",
      "command": ["npx", "podman-mcp-server@latest"],
      "environment": {},
      "enabled": true
    },
    "sentient-agi-reasoning": {
      "type": "local",
      "command": ["node", "--expose-gc", "/Users/mp/.agent-tools/map-think-do/dist/index.js"],
      "environment": {
        "NODE_ENV": "production",
        "DEBUG": "true",
        "MEMORY_STORE_TYPE": "postgresql",
        "POSTGRES_HOST": "localhost",
        "POSTGRES_PORT": "5432",
        "POSTGRES_DB": "map_think_do",
        "POSTGRES_USER": "mtd_user",
        "POSTGRES_PASSWORD": "{file:~/.config/opencode/secrets/postgres_password}",
        "TELEMETRY_ENABLED": "false"
      },
      "enabled": true
    },
    "grafana": {
      "type": "local",
      "command": ["/Users/mp/.go/bin/mcp-grafana", "--debug"],
      "environment": {
        "GRAFANA_URL": "https://hatchengineering.grafana.net",
        "GRAFANA_API_KEY": "{file:~/.config/opencode/secrets/grafana_api_key}"
      },
      "enabled": true
    },
    "postgres": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "@modelcontextprotocol/server-postgres",
        "postgresql://mtd_user:{file:~/.config/opencode/secrets/postgres_password}@localhost:5432/map_think_do"
      ],
      "enabled": false
    },
    "github": {
      "type": "remote",
      "url": "https://api.githubcopilot.com/mcp/"
    },
    "incidentio": {
      "type": "local",
      "command": ["/Users/blentz/mp/incidentio-mcp-golang/bin/mcp-server"],
      "environment": {
        "INCIDENT_IO_API_KEY": "{file:~/.config/opencode/secrets/incident_io_key}"
      },
      "enabled": true
    },
    "slack": {
      "type": "local",
      "command": ["npx", "-y", "slack-mcp-server@latest", "--transport", "stdio"],
      "environment": {
        "SLACK_MCP_XOXC_TOKEN": "{file:~/.config/opencode/secrets/slack_token}",
        "SLACK_MCP_LOG_LEVEL": "info",
        "SLACK_MCP_USERS_CACHE": "/Users/mp/git/.opencode/.users_cache.json",
        "SLACK_MCP_CHANNELS_CACHE": "/Users/mp/git/.opencode/.channels_cache.json"
      },
      "enabled": false
    },
    "linear": {
      "type": "local",
      "command": ["npx", "-y", "mcp-remote", "https://mcp.linear.app/sse"],
      "enabled": true
    },
    "notion": {
      "type": "remote",
      "url": "https://mcp.notion.com/mcp",
      "enabled": true,
      "oauth": {
        "scope": "tools:read"
      }
    },
    "mongodb-atlas": {
      "type": "local",
      "command": ["npx", "-y", "mongodb-mcp-server", "--readOnly"],
      "environment": {
        "MDB_MCP_CONNECTION_STRING": "{file:~/.config/opencode/secrets/mongodb_atlas_connection_string}"
      },
      "enabled": false
    }
  },
  "instructions": ["AGENTS.md"]
}
